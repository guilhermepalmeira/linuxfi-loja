<% content_for :cabecalho do %>
Meu Carrinho
<%end%>

<% form_tag atualizar_pedido_itens_path, :method => :post do %>

<table>
  <thead>
    <tr>
    <td>Nome</td>
    <td>Quantdidade</td>
    <td>Preço unitário</td>
    <td>Preço total</td>
  </tr>
  </thead>
  <tbody>
    <% pedido_atual.itens.each do |item| %>
      <%= render "item", :item => item %><!--O render chama o partial _item-->
    <%end%>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="2" ></td>
      <td>Preço Total:</td>
      <td> <%= number_to_currency pedido_atual.preco_total %>  </td>
    </tr>
  </tfoot>
</table>
<%= submit_tag "Atualizar" %> 
<%end%><!--fechando o formulario-->